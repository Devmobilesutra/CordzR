<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rrlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/heading_background"
        android:orientation="horizontal">

        <com.sapl.retailerorderingmsdpharma.customView.CustomButtonRegular
            android:id="@+id/digHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center"
            android:text="CORDZ-R"

            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/img_success"
        android:layout_width="@dimen/dp50"
        android:layout_height="@dimen/dp50"
        android:layout_below="@+id/digHeader"
        android:layout_gravity="center"
        android:src="@drawable/ic_success_order"
        android:visibility="gone"/>

    <com.sapl.retailerorderingmsdpharma.customView.CustomTextViewRegular
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical|center"
        android:layout_marginTop="@dimen/dp20"

   />


    <com.sapl.retailerorderingmsdpharma.customView.CustomTextViewRegular
        android:id="@+id/tv_order_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="1234455"
        android:layout_margin="@dimen/sp8"
        android:visibility="gone"/>

    <com.sapl.retailerorderingmsdpharma.customView.CustomTextViewRegular
        android:id="@+id/tv_Thankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center"
        android:text="Thank you"
        android:layout_margin="@dimen/sp8"
        android:visibility="gone"/>



    <com.sapl.retailerorderingmsdpharma.customView.CustomButtonBold
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="OK"

        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20"
        />
</LinearLayout>